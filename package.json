{
    "name": "apexgetcoverage",
    "displayName": "Salesforce Apex Get Coverage",
    "description": "Get Coverage of your Apex Classes/Triggers. Highlight covered/uncovered lines.",
	"icon": "newIcon.jpg",
    "version": "2.3.0",
    "publisher": "RaffaelePreziosi",
	"repository": { "type": "git", "url": "https://github.com/PreziosiRaffaele/ApexGetCoverage.git"},
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Extension Packs","Other"
    ],
	"keywords":[
		"Salesforce", "Apex", "Test","sfdx","salesforcedx"
	],
    "activationEvents": [
        "onCommand:extension.getCoverage",
        "onCommand:extension.createTraceFlag",
        "onCommand:extension.deleteActiveTraceFlag",
        "onCommand:extension.deleteApexLogs"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.getCoverage",
                "title": "SFDX: Apex Get Coverage"
            },
            {
              "command": "extension.createTraceFlag",
              "title": "SFDX: Create Trace Flag"
            },
            {
              "command": "extension.deleteActiveTraceFlag",
              "title": "SFDX: Delete Active Trace Flag"
            },
            {
              "command": "extension.deleteApexLogs",
              "title": "SFDX: Delete Apex Logs"
            }
        ],
        "configuration": [
          {
            "title": "Salesforce Apex Get Coverage",
            "properties": {
              "apexGetCoverage.Brightness": {
                "type": "number",
                "minimum": 10,
                "maximum": 100,
                "default": 50,
                "description": "Set Decoration Brightness for covered/uncovered lines"
              },
              "apexGetCoverage.CoveredLinesColor": {
                "type": "string",
                "default": "45,121,11",
                "pattern": "^(\\d{1,2}|[1][0-9][0-9]|[2][0-5][0-5]),(\\d{1,2}|[1][0-9][0-9]|[2][0-5][0-5]),(\\d{1,2}|[1][0-9][0-9]|[2][0-5][0-5])$",
                "description": "RGB Color. Default value 45,121,11"
              },
              "apexGetCoverage.UncoveredLinesColor": {
                "type": "string",
                "default": "253,72,73",
                "pattern": "^(\\d{1,2}|[1][0-9][0-9]|[2][0-5][0-5]),(\\d{1,2}|[1][0-9][0-9]|[2][0-5][0-5]),(\\d{1,2}|[1][0-9][0-9]|[2][0-5][0-5])$",
                "description": "RGB Color. Default value 253,72,73"
              }
            }
          }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "typescript": "^2.6.1",
        "vscode": "^1.1.30"
    }
}
