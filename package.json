{
    "name": "apexgetcoverage",
    "displayName": "Apex Get Coverage",
    "description": "Get Coverage of your Apex Classes/Triggers. Highlight covered/uncovered lines.",
	"icon": "icon.png",
    "version": "0.0.4",
    "publisher": "RaffaelePreziosi",
	"repository": { "type": "git", "url": "https://github.com/PreziosiRaffaele/ApexGetCoverage.git"},
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Extension Packs"
    ],
	"keywords":[
		"Salesforce", "Apex", "Test"
	],
    "activationEvents": [
        "onCommand:extension.getCoverage"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.getCoverage",
                "title": "SFDX: Apex Get Coverage"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "typescript": "^2.6.1",
        "vscode": "^1.1.30"
    }
}
